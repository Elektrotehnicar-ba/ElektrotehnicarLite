<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forum.Forum">

    <WebView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/webView_forum" />
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="65dp"
        android:src="@drawable/problem"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:text="Upss.. pojavio se problem sa konencijom"
        android:textColor="#33364D"
        android:textSize="18sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView8a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:text="Učitavanje"
        android:textColor="#33364D"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_osvjezi_forum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Osvježi"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBar8"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:visibility="visible" />

</RelativeLayout>